<Window x:Class="FlexAutomator.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Логи" 
        Height="550" Width="800"
        Background="{StaticResource AppBackgroundBrush}"
        TextElement.Foreground="{StaticResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <materialDesign:PackIcon Kind="ConsoleLine" Width="24" Height="24" 
                                   VerticalAlignment="Center" Margin="0,0,12,0" 
                                   Opacity="0.7"/>
            <TextBlock Text="Консоль виконання" 
                       FontSize="20" 
                       FontWeight="SemiBold"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="{StaticResource MaterialDesignCardBackground}"
                BorderBrush="{StaticResource SubtleBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock" 
                          FontFamily="Consolas"
                          FontSize="13"
                          TextWrapping="Wrap"
                          Foreground="#D0D0D0"/>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2" 
               Content="Очистити"
               Click="Clear_Click"
               Style="{StaticResource MaterialDesignOutlinedButton}"
               HorizontalAlignment="Right"
               Margin="0,16,0,0"
               Foreground="{StaticResource MaterialDesignBody}"
               BorderBrush="{StaticResource SubtleBorderBrush}"/>
    </Grid>
</Window>