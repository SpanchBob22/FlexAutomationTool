<Window x:Class="FlexAutomator.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FlexAutomator.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:SettingsViewModel}"
        mc:Ignorable="d"
        Title="Налаштування"
        Height="700" Width="650"
        Background="{StaticResource AppBackgroundBrush}"
        TextElement.Foreground="{StaticResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="Налаштування" 
                  FontSize="24" 
                  FontWeight="SemiBold"
                  HorizontalAlignment="Center"
                  Margin="0,24,0,16"/>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="24,0">

            <StackPanel MaxWidth="550" HorizontalAlignment="Center">


                <TextBlock Text="Розташування даних" 
                           FontSize="14" FontWeight="Medium" Opacity="0.7" 
                           Margin="0,0,0,8"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,24" 
                                   UniformCornerRadius="8"
                                   Background="{StaticResource MaterialDesignCardBackground}"
                                   BorderBrush="{StaticResource SubtleBorderBrush}"
                                   BorderThickness="1">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                    </materialDesign:Card.Effect>

                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Поточна папка бази даних:" Opacity="0.5" FontSize="12"/>
                                <TextBlock Text="{Binding CurrentDbPath}" 
                                           TextWrapping="Wrap" 
                                           FontSize="14"
                                           Margin="0,4,16,0"/>
                            </StackPanel>

                            <materialDesign:PackIcon Grid.Column="1" 
                                                   Kind="DatabaseCheckOutline" 
                                                   Width="24" Height="24" 
                                                   VerticalAlignment="Center" 
                                                   Opacity="0.7"/>
                        </Grid>

                        <Button Content="Змінити розташування"
                                Command="{Binding ChangeDatabaseLocationCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"
                                Foreground="{StaticResource MaterialDesignBody}"
                                BorderBrush="{StaticResource SubtleBorderBrush}"
                                ToolTip="Скине налаштування шляху і перезапустить програму"/>
                    </StackPanel>
                </materialDesign:Card>


                <materialDesign:Card Padding="16" Margin="0,0,0,24" 
                                   UniformCornerRadius="8"
                                   Background="{StaticResource MaterialDesignCardBackground}"
                                   BorderBrush="{StaticResource SubtleBorderBrush}"
                                   BorderThickness="1">
                    <materialDesign:Card.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="270" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                    </materialDesign:Card.Effect>

                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Send" 
                                                       Foreground="{StaticResource MaterialDesignBody}" 
                                                       Width="24" Height="24" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="Telegram Бот" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding IsTelegramBotEnabled, Converter={StaticResource BooleanToVisibilityConverter}, StringFormat='{}Активний'}" 
                                           VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.5" FontSize="12"/>
                                <ToggleButton IsChecked="{Binding IsTelegramBotEnabled}"
                                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                              ToolTip="Увімкнути/Вимкнути бота"/>
                            </StackPanel>
                        </Grid>

                        <TextBox Text="{Binding TelegramBotToken, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Bot Token (від BotFather)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="Circle" 
                                                   Foreground="{Binding ConnectionColor}" 
                                                   Width="10" Height="10" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,2,8,0"/>

                            <TextBlock Grid.Column="1" 
                                     Text="{Binding ConnectionStatus}" 
                                     Foreground="{Binding ConnectionColor}"
                                     FontSize="13"
                                     VerticalAlignment="Center"/>

                            <Button Grid.Column="2"
                                    Content="Підключити"
                                    Command="{Binding StartPairingCommand}"
                                    Height="32" Padding="16,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPaired}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="2"
                                    Content="Відключити"
                                    Command="{Binding DisconnectCommand}"
                                    Foreground="#EF5350"
                                    BorderBrush="#EF5350"
                                    Height="32" Padding="16,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPaired}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <materialDesign:Card Background="{StaticResource MaterialDesignPaper}"
                                           UniformCornerRadius="6"
                                           Padding="12"
                                           Margin="0,8,0,0"
                                           BorderBrush="{StaticResource SubtleBorderBrush}"
                                           BorderThickness="1"
                                           Visibility="{Binding IsPairing, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Відправте цей код боту для авторизації:" 
                                           HorizontalAlignment="Center" Opacity="0.5" FontSize="12" Margin="0,0,0,8"/>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding PairingCode, StringFormat='/pair {0}'}"
                                             IsReadOnly="True"
                                             FontSize="16" FontWeight="Bold"
                                             HorizontalContentAlignment="Center"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             BorderThickness="0"/>

                                    <Button Grid.Column="1"
                                            Command="{Binding CopyCodeCommand}"
                                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                                            ToolTip="Копіювати команду"
                                            Margin="8,0,0,0">
                                        <materialDesign:PackIcon Kind="ContentCopy" />
                                    </Button>
                                </Grid>


                                <Grid>
                                    <ProgressBar Value="{Binding PairingProgress}" 
                                               Maximum="100" 
                                               Height="2" 
                                               Foreground="{StaticResource SecondaryHueMidBrush}"
                                               Background="{StaticResource MaterialDesignDivider}"/>

                                    <TextBlock Text="{Binding PairingTimeRemaining}" 
                                             HorizontalAlignment="Center" 
                                             Margin="0,6,0,0" FontSize="10" Opacity="0.5"/>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </materialDesign:Card>

                <TextBlock Text="Інші API Ключі" FontSize="14" FontWeight="Medium" Opacity="0.7" Margin="0,0,0,8"/>

                <StackPanel Margin="0,0,0,24">
                    <TextBox Text="{Binding YouTubeApiKey, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="YouTube API Key"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,0,16"/>

                    <TextBox Text="{Binding TmDbApiKey, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="TMDb API Key"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                BorderBrush="{StaticResource SubtleBorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="24"
                Background="{StaticResource MaterialDesignPaper}">
            <Button Content="Зберегти налаштування"
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    HorizontalAlignment="Right"
                    Click="Save_Click"/>
        </Border>
    </Grid>
</Window>